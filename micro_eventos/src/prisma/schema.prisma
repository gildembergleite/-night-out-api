generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Eventos {
  id_evento     String            @id @default(uuid())
  titulo        String
  descricao     String
  data_inicio   DateTime
  data_fim      DateTime
  idade_minima  String
  visibilidade  String
  status        String
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  artistas      EventoArtista[]  
}

model EventoArtista {
  id             String   @id @default(uuid())
  id_evento      String
  id_artista     String    // ID externo do artista (vem de outro microservi√ßo)

  funcao         String
  cache_acordado String
  ordem          String
  principal      Boolean   @default(false)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  evento         Eventos   @relation(fields: [id_evento], references: [id_evento])
}