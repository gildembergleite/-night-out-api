// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  hash      String
  phone     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  artista       Artista?
  casaDeShow    CasaDeShow?
  cliente       Cliente?
}

model Artista {
  id             String   @id @default(uuid())
  userId         String   @unique
  user           User     @relation(fields: [userId], references: [id])

  nome_artistico String
  genero_musical String
  cache_min      String
  bio            String
  url_portfolio  String
  verificado     Boolean  @default(false)
  created_at     DateTime @default(now())

  casasDeShow    CasaDeShow[]
}

model CasaDeShow {
  id            String   @id @default(uuid())
  userId        String   @unique
  user          User     @relation(fields: [userId], references: [id])

  artistaId     String?
  artista       Artista? @relation(fields: [artistaId], references: [id])

  nome_fantasia String
  cpf           String
  capacidade    String
  cep           String
  logradouro    String
  numero        String
  complemento   String
  bairro        String
  cidade        String
  uf            String
  geo_lat       String
  geo_lng       String
  created_at    DateTime @default(now())
}

model Cliente {
  id              String   @id @default(uuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id])

  apelido         String
  preferencias    String
  data_nascimento String
  created_at      DateTime @default(now())
}