generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ComandaDigital {
  id_comanda   String       @id @default(uuid())
  status       String
  aberta_em    DateTime
  fechada_em   DateTime?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  itens        ItemComanda[]
}

model ItemComanda {
  id_item      String       @id @default(uuid())
  id_comanda   String
  descricao    String
  quantidade   String
  preco_unit   String
  criado_em    DateTime
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  comanda      ComandaDigital @relation(fields: [id_comanda], references: [id_comanda])
}