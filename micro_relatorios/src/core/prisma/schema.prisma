generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Relatorio {
  id_relatorio   String    @id @default(uuid())
  tipo_relatorio String // EVENTOS, USUARIOS, VENDAS, PROPOSTAS, etc.
  nome_relatorio String
  descricao      String?
  parametros     String // JSON com os parâmetros usados para gerar o relatório
  dados          String // JSON com os dados do relatório
  formato        String    @default("JSON") // JSON, EXCEL
  status         String    @default("GERADO") // GERADO, PROCESSANDO, ERRO
  criado_por     String?
  data_inicio    DateTime?
  data_fim       DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@index([tipo_relatorio])
  @@index([status])
  @@index([createdAt])
}
